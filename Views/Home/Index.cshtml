@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to CRUDelicious</h1>
    <div>
        <h4>
            <div class="container text-center">
                <div class="row mx-auto">
                    <div class="col">
                        <form asp-action="IndexView" asp-controller="Home" method="get">
                            <button type="submit" class="btn btn-link">Home</button>
                        </form>
                    </div>
                    <div class="col">
                        <form asp-action="RAddDish" asp-controller="Home" method="get">
                            <button class="btn btn-link">Add Dish</button>
                        </form>
                    </div>
                </div>
            </div>

        </h4>
    </div>
    <br>
</div>
<div>
    <h5>Check out some recent dishes</h5>
    <hr>
    @foreach (var plato in ViewBag.Platos)
    {
        <form asp-action="SelectDish" asp-controller="Home" asp-route-DishId="@plato.DishId">
            <p><a href="dishes/@plato.DishId">@plato.Name</a> by @plato.Chef</p>
        </form>
    }
</div>